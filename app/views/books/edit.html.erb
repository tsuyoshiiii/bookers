<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
    <%= f.hidden_field :id %>
    <p>Title</p>
    <%= f.text_field :title %>
      
    <p>Body</p>
    <%= f.text_area :body %>

    <p>
    <%= f.submit 'Update Book' %>
    <p/>
  <% end %>

