<h3>Books</h3>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
       <% @books.each do |book| %>
          <tr>
            <td> <%= book.title %> </td>
            <td> <%= book.body %> </td>
            <td> <%= link_to "Show", book_path(book.id) %>
                 <%= link_to "Edit", edit_book_path(book.id) %>
                 <%= link_to "Destroy",
              book_path(book.id), 
              method: :delete, 
              "data-confirm" => "Are you sure?" %>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>

<h4>New Book</h4>
<%= form_with model: @book, url: books_path do |f| %>
  <p>Title</p>
  <%= f.text_field 'book[title]' %>
	
  <p>Body</p>
  <%= f.text_area 'book[body]' %>
	
  <p>
  <%= f.submit 'Create Book' %>
  <p/>
<% end %>

